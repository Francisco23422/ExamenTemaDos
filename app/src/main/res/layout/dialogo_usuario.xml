<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#454545"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/rojoDados"
        android:fontFamily="@font/montserrat_bold"
        android:padding="20dp"
        android:text="BIENVENIDO FRANCISCO"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre : "
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDAD : 17"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Genero :" />
    <TextView
        android:id="@+id/txt_fecha_nacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Fecha de nacimiento : " />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Â¿Son correctos tus datos?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNo"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="#293249"
            android:elevation="8dp"
            android:radius="0dp"
            android:text="No, son erroneos"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/rojoDados" />

        <Button
            android:id="@+id/btnSi"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="#293249"
            android:elevation="8dp"
            android:radius="0dp"
            android:text="Si, son correctos"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/rojoDados" />
    </LinearLayout>

</LinearLayout>
