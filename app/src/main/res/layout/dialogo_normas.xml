<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#454545"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/rojoDados"
        android:gravity="center"
        android:padding="8dp"
        android:src="@drawable/dado" />

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="42dp"
        android:gravity="center"
        android:text="Si los 3 son iguales ganarás 200 puntos.\nSi los 2 son iguales ganarás 100 puntos.\nSi no coinciden ninguno, no ganarás nada.\n Recuerda que por cada tirada perderas 10 puntos,\n ¿Quieres jugar?"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#293249"
            android:layout_marginEnd="6dp"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button"
            android:elevation="8dp"
            app:backgroundTint="@color/rojoDados"
            android:radius="0dp" />

        <Button
            android:id="@+id/btnSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="#293249"
            android:text="Sí"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button"
            android:elevation="8dp"
            android:radius="0dp"
            app:backgroundTint="@color/rojoDados"/>
    </LinearLayout>
</LinearLayout>
